# .editorconfig

# Top-most EditorConfig file
root = true

# Set the default charset
[*]
charset = utf-8

# Use 2 spaces for indentation
[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

# Set the maximum line length to 200 characters
[*.js]
max_line_length = 200

[*.html]
max_line_length = 200

[*.css]
max_line_length = 200
